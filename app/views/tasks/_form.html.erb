<div class="container">
  <%= form_for(@task)  do |f|%>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control input-lg' %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control input-lg'%>
    </div>
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>

